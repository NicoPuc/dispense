{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared-validation": ["../../libs/shared-validation/src/index.ts"],
      "@shared-validation/*": ["../../libs/shared-validation/src/*"],
      "@shared-utils": ["../../libs/shared-utils/src/index.ts"],
      "@shared-utils/*": ["../../libs/shared-utils/src/*"]
    },
    "types": ["node", "react", "react-dom"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../libs/shared-validation/src/index.ts",
    "../../libs/shared-utils/src/index.ts",
    "../../dist/apps/frontend/.next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
